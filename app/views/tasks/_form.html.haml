= form_with model: @task, local: true, class: "input-form" do |f|
  %div.form-group
    = f.label :name
    = f.text_field :name, id: :task_name, class: "form-control", placeholder: true
  %div.form-group
    = f.label :description
    = f.text_area :description, id: :task_desc, class: "form-control", placeholder: true
  %div.form-group
    = f.label :expires_at
    = f.datetime_select :expires_at, minute_step: 10, use_month_numbers: true
  %div.form-group
    = f.label :status
    = f.select :status, Task.statuses_i18n.invert, class: "form-control"
  %div.form-group
    = f.label :priority
    = f.select :priority, Task.priorities_i18n.invert, class: "form-control"

  = f.submit data: { disable_with: "登録する" }, class: "btn btn-primary"
